# LLM keys
DEEPSEEK_API_KEY=sk-deepseek-...
CURSOR_API_KEY=sk-cursor-...   # GPT-5 (Cursor) avain

# Budjetit / kk (euro ~ usd)
DEEPSEEK_MONTHLY_EUR=20
GPT5_MONTHLY_EUR=10

# Cost estimointi (muokkaa omien sopimusten mukaan)
DEEPSEEK_COST_PER_1K_TOKENS=0.0012
GPT5_COST_PER_1K_TOKENS=0.02

# Routing-kynnykset
ROUTE_COMPLEXITY_THRESHOLD=0.50
ROUTE_RISK_THRESHOLD=0.40
ROUTE_VALIDATION_ONLY_TRUST=0.20

# Kieli
PRIMARY_LOCALE=fi

# Caching
CACHE_DIR=.cache/hybrid
CACHE_TTL_HOURS=72
PROMPT_VERSION=v1

# Output
ARTIFACTS_DIR=artifacts
OUTPUT_NEWSWIRE=${ARTIFACTS_DIR}/report.enriched.json

# Live LLM Client Configuration
DEEPSEEK_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_EUR_PER_1K_IN=0.12
DEEPSEEK_EUR_PER_1K_OUT=0.24

CURSOR_BASE=https://api.openai.com
GPT5_MODEL=gpt-5-thinking
GPT5_EUR_PER_1K_IN=2.5
GPT5_EUR_PER_1K_OUT=10.0

# Cursor Pro GPT-5 Configuration
CURSOR_API_KEY=sk-...
CURSOR_BASE_URL=https://api.cursor.sh/v1
CURSOR_GPT5_MODEL=gpt-5-thinking
CURSOR_MAX_TOKENS=1200
CURSOR_TIMEOUT_S=45

# --- LLM routing ---
LLM_PROVIDER_MODE=hybrid   # hybrid | cursor_only | deepseek_only
CURSOR_API_KEY=            # Cursor Pro GPT-5
CURSOR_BASE=https://api.cursor.sh/v1
CURSOR_MODEL=gpt-5-large   # tai organisaatiosi malli-id

# Optional: DeepSeek jos käytössä
DEEPSEEK_API_KEY=
DEEPSEEK_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-r1
